{#
/**
 * @file
 * Default theme implementation to display 6col 6col layout.
 *
 * Available variables:
 * - content: The content for this layout.
 * - attributes: HTML attributes for the layout wrapper.
 *
 * @ingroup themeable
 */
#}

{%
  set classes = [
    'layout',
    'layout--eightcol-centered',
    'container',
  ]
%}

{% if content %}
  <div{{ attributes.addClass(classes) }}>
    <div class="row">
      {% if content.first_8col %}
        <div {{ region_attributes.first_8col.addClass('layout__region', 'layout__region--first_8col', 'col-md-8', 'mx-auto') }}>
          {{ content.first_8col }}
        </div>
      {% endif %}
    </div>
  </div>
{% endif %}

