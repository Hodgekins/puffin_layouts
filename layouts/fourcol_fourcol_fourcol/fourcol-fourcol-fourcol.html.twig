{#
/**
 * @file
 * Default theme implementation to display 6col 6col layout.
 *
 * Available variables:
 * - content: The content for this layout.
 * - attributes: HTML attributes for the layout wrapper.
 *
 * @ingroup themeable
 */
#}

{%
  set classes = [
    'layout',
    'layout--fourcol-fourcol-fourcol',
    'container',
  ]
%}

{% if content %}
  <div{{ attributes.addClass(classes) }}>
    <div class="row">
      {% if content.first_4col %}
        <div {{ region_attributes.first_4col.addClass('layout__region', 'layout__region--first_4col', 'col-md-4') }}>
          {{ content.first_4col }}
        </div>
      {% endif %}

      {% if content.second_4col %}
        <div {{ region_attributes.second_4col.addClass('layout__region', 'layout__region--second_4col', 'col-md-4') }}>
          {{ content.second_4col }}
        </div>
      {% endif %}

      {% if content.third_4col %}
        <div {{ region_attributes.third_4col.addClass('layout__region', 'layout__region--second_4col', 'col-md-4') }}>
          {{ content.third_4col }}
        </div>
      {% endif %}
    </div>
  </div>
{% endif %}

